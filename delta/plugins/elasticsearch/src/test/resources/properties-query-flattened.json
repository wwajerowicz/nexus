{
  "size": 0,
  "query": {
    "term": {
      "@type": "${type}"
    }
  },
  "aggs": {
    "properties": {
      "terms": {
        "field": "properties.path"
      },
      "aggs": {
        "filtered": {
          "filter": {
            "term": {
              "properties.isInArray": false
            }
          },
          "aggs": {
            "paths": {
              "terms": {
                "field": "properties.path",
                "shard_size": 300,
                "size": 100
              }
            }
          }
        }
      }
    }
  }
}